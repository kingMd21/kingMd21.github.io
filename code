<link href='https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet' rel='stylesheet' type='text/css'>
<script src="/assets/jquery.js"></script>
<style>
body { 
  text-align: center;
  font-family: 'Nanum Pen Script';
  font-size: 35px;
  background: #e1eaf0;
}
button {
  margin: 40px;
}
input {
  font-size: 24px;
}
.fill {
  background: yellow;
  color: red;
  border-bottom: 2px blue solid;
  font-family: 'Inconsolata';
  font-size: 35px;
  padding: 0 6px;
  margin: 4px;
}
</style>
